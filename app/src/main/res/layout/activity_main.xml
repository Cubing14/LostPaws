<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context="MainActivity">

    <!-- Menú hamburguesa -->
    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_menu" />

    <!-- Ícono de perfil -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_profile" />

    <!-- Contenedor de eslogan + botón -->
    <LinearLayout
        android:id="@+id/top_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_icon"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">

        <!-- Eslogan -->
        <TextView
            android:id="@+id/app_slogan"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:text="Your best friend may be closer than you think"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="2" />

        <!-- Botón "Lost your pet?" -->
        <Button
            android:id="@+id/btn_lost_pet"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:text="Lost your pet? Click here"
            android:backgroundTint="#FFD700"
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingHorizontal="8dp" />
    </LinearLayout>

    <!-- Barra de búsqueda -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/top_banner"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:hint="Search"
        android:background="@drawable/edittext_border_black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp" />

    <!-- Título de categorías -->
    <TextView
        android:id="@+id/categories_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="16dp"
        android:text="Categories"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Iconos de las categorías -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/categories_title"
        android:layout_marginTop="16dp">

        <!-- Icono de Dog -->
        <LinearLayout
            android:id="@+id/category_dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/dog_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_dog"
                android:background="@drawable/icon_border_default"
                android:scaleType="centerCrop"
                android:contentDescription="Dog Icon" />
            <TextView
                android:id="@+id/dog_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dogs"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Icono de Cat -->
        <LinearLayout
            android:id="@+id/category_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">
            <ImageView
                android:id="@+id/cat_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_cat"
                android:background="@drawable/icon_border_default"
                android:scaleType="centerCrop"
                android:contentDescription="Cat Icon" />
            <TextView
                android:id="@+id/cat_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cats"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Icono de Other -->
        <LinearLayout
            android:id="@+id/category_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/others_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_others"
                android:background="@drawable/icon_border_default"
                android:scaleType="centerCrop"
                android:contentDescription="Other Icon" />
            <TextView
                android:id="@+id/others_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center">

        <Button
            android:id="@+id/btn_finding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Finding"
            android:textColor="#000000"
            android:background="@drawable/bottom_button_selector"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_missing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Missing"
            android:textColor="#000000"
            android:background="@drawable/bottom_button_selector"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btn_adoption"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Adoption"
            android:textColor="#000000"
            android:background="@drawable/bottom_button_selector"
            android:layout_margin="4dp" />
    </LinearLayout>

</RelativeLayout>
