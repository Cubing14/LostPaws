<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- Flechita de regreso -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Go back"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Título del formulario -->
    <TextView
        android:id="@+id/form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report_pet"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Nombre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pet_name"
        android:textColor="#666666"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter pet name"
        android:padding="12dp"
        android:background="@drawable/edittext_border"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Edad -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pet_age"
        android:textColor="#666666"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/pet_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter pet age"
        android:padding="12dp"
        android:inputType="number"
        android:background="@drawable/edittext_border"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Raza -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pet_breed"
        android:textColor="#666666"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/pet_breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter pet breed"
        android:padding="12dp"
        android:background="@drawable/edittext_border"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Tipo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pet_type"
        android:textColor="#666666"
        android:textSize="14sp" />
    <Spinner
        android:id="@+id/pet_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/species_array"
        android:layout_marginBottom="16dp" />

    <!-- Ubicación -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_lost"
        android:textColor="#666666"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/pet_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Where was your pet last seen?"
        android:padding="12dp"
        android:background="@drawable/edittext_border"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Botón de envío -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="#FFFFFF"
        android:background="#FF6D00"
        android:padding="12dp" />

</LinearLayout>
